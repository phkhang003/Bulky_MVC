@model List<ManageOrders>

@{
    ViewData["Title"] = "Order List";
}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h2 class="text-white py-2">Order List</h2>
                    <a href="@Url.Action("Index", "Home", new { area = "" })" class="btn btn-outline-primary text-white fw-semibold btn-sm text-uppercase bg-gradient">
                        <small>Back to home</small>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <table id="manageOrdersData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Phone Number</th>
                    <th>Email</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/ManageOrders.js"></script>
}
