@model BulkyBook.Models.Order

@{
    ViewData["Title"] = "Online Payment";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow border-0 mt-4">
                <div class="card-header bg-secondary bg-gradient ml-0 py-2">
                    <div class="row">
                        <div class="col-12 d-flex justify-content-between align-items-center">
                            <h2 class="text-white py-2 text-start text-sm-start">Online Payment</h2>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary text-white fw-semibold btn-sm text-uppercase bg-gradient">
                                <small>Back to Home</small>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <h4 class="fw-bold">Order Summary:</h4>
                    <ul class="list-group">
                        @foreach (var item in Model.OrderDetails)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-start text-start text-sm-start">
                                <div class="ms-2 me-auto">
                                    <div class="fw-bold">@item.Product.Title</div>
                                    Quantity: @item.Quantity
                                </div>
                                <span>@item.Price.ToString("C2")</span>
                            </li>
                        }
                        <li class="list-group-item d-flex justify-content-between align-items-start text-start text-sm-start" style="background-color: FloralWhite;">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">Total(USD)</div>
                            </div>
                            <span style="color: MidnightBlue; font-weight: bold;">@Model.OrderTotal.ToString("C2")</span>
                        </li>
                    </ul>

                    <hr />

                    <div class="alert alert-info" role="alert">
                        Please proceed to the payment gateway to complete your order.
                    </div>
                    <a href="YourPaymentGatewayURL" class="btn btn-primary btn-lg">Proceed to Payment</a>
                </div>
            </div>
        </div>
    </div>
</div>
