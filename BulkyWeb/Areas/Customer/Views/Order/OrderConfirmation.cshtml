@model BulkyBook.Models.Order

<div class="container">
    <h2>Order Confirmation</h2>
    <div class="row">
        <div class="col-md-12">
            <p><strong>Order Id:</strong> @Model.Id</p>
            <p><strong>Date:</strong> @Model.OrderDate.ToString("MM/dd/yyyy")</p>
            <p><strong>Total:</strong> $@Model.OrderTotal</p>
            <p><strong>Status:</strong> @Model.OrderStatus</p>
        </div>
    </div>

    @if (Model.OrderDetails != null && Model.OrderDetails.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Quantity</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderDetails)
                {
                    <tr>
                        <td>@item.Product.Title</td>
                        <td>@item.Product.Description</td>
                        <td>@item.Quantity</td>
                        <td>$@item.Price</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items found in your order.</p>
    }
</div>
